@model TeamsViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<form asp-action="Create" asp-controller="Teams" asp-area="Admin" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" type="text" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
      <div class="form-group">
        <label asp-for="Logo" class="control-label"></label>
        <input asp-for="Logo" class="form-control" type="file" />
        <span asp-validation-for="Logo" class="text-danger"></span>
    </div>
    <a class="btn btn-info" asp-action="Index" asp-controller="Teams">Back</a>
    <button type="submit" class="btn btn-success">Save</button>
</form>
