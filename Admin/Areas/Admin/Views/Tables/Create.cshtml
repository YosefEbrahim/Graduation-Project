@model TableViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Table</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Table</label>
                <input asp-for="File" type="file" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeptId" class="control-label"></label>
                <select asp-for="DeptId" class ="form-control" name="DeptId" onchange="getRanks()" asp-items="ViewBag.DeptId"></select>
            </div>
                <div class="form-group">
                <label asp-for="Section_Num" class="control-label"></label>
                <input asp-for="Section_Num" class="form-control" type="text" />
                <span asp-validation-for="Section_Num" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RankId" class="control-label"></label>
@*                <select asp-for="RankId" class ="form-control" name="RankId" asp-items="ViewBag.RankId"></select>
*@                <select asp-for="RankId" class ="form-control" name="RankId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{
<script>

    $(document).ready(function() {
     getRanks();
});
    function getRanks()
    {
        var deptid=$("#DeptId").val();
        debugger;
         $.ajax(
            {
                type: "POST",
                url: "/Admin/Shared/GetRanks",
                dataType: "json",
                data: { "deptid": deptid },        
                success: function (result) {
                    if (result.key == 1) {
   debugger;
                            var $el = $("#RankId");
                            $el.empty(); // remove old options
                            $.each(result.ranks, function(index,rank) {
                                   debugger;
                              $el.append($("<option></option>")
                                 .attr("value", rank.id).text(rank.name));
                            });
                    }
                    else {
                        
                    }
                }
            });
    }

</script>
}