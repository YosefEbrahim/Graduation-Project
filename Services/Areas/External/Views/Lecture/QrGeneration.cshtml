@model Services.ViewModels.LectureWebViewModel

@{
    ViewData["Title"] = "QrGeneration";
    Layout = "~/Areas/External/Views/Shared/_Layout.cshtml";
}

<style>
        .form-group
        {
            margin: 20px auto;
        }
</style>

<h1>Qr Generation</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="QrGeneration">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LecNumber" class="control-label"></label>
                <input asp-for="LecNumber" class="form-control" type="number" min="1" max="12" />
                <span asp-validation-for="LecNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" min='@DateTime.Now.ToString("yyyy-MM-ddThh:mm")' max='@DateTime.Now.AddDays(30).ToString("yyyy-MM-ddThh:mm")' />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qr_Duration" class="control-label"></label>
                <input asp-for="Qr_Duration" class="form-control"  min="1" max="5"/>
                <span asp-validation-for="Qr_Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject_Id" class="control-label"></label>
                <select asp-items="@Model.Subjects" name="Subject_Id" class="form-control"></select>
                <span asp-validation-for="Subject_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Doctor_Id" class="form-control"  hidden value="@ViewBag.id"/>
            </div>
            <div class="form-group">
                    <a asp-action="Index" class="btn btn-secondary">Back</a> | 
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

